<% if @author.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @author.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @author do |f| %>

  <div class="container" style="margin-top:30px">
<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
  <div class="panel-heading"><h1 class="panel-title"><strong>New Author </strong></h1></div>
  <div class="panel-body">
   <form role="form">
     <div class="form-group">
       <%= f.label :name, "Name"%>
       <%= f.text_field :name%>
     </div>
  <div class="form-group">
    <%= f.label :email, "Email"%>
    <%= f.text_field :email%>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password"%>
    <%= f.password_field :password%>
  </div>
  <div>
    <%= f.label :password_confirmation, "Password Again"%>
    <%= f.password_field :password_confirmation%>
  </div>
  <br>
  <%= f.submit "Crear"%>
  <%= link_to "Cancelar", root_path%>

</form>
  </div>
</div>
</div>

<% end %>
