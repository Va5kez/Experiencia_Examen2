<h1>Nuevo Libro</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @book.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @book.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @book do |f| %>
<div>
  <p>
    <%= f.label :title, "Titulo"%>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :description, "Descripcion"%>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.label :price, "Precio"%>
    <%= f.number_field :price%>
  </p>

  <p>
    <%= f.label :category%>
    <%= f.select :category, Book.categories %>
  </p>

  <p>
    <%= f.label :quantities%>
    <%= f.number_field :quantities %>
  </p>

  <p>
    <%= f.submit "Crear", class:"btn btn-default btn-lg" %>
    <%= link_to "Cancelar", books_path, class:"btn btn-default btn-lg" %>
  </p>
</div>
<% end %>
